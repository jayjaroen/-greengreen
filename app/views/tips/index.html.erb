<main class="bg-lightsand h-screen">
  <h1 class="text-moss text-center text-4xl font-oswald py-4">Tips & Tricks</h1>

  <div class="grid grid-cols-2 h-25">

    <% @tips.each do |tip| %>
      <div class="bg-artichoke p-3 m-2 text-moss rounded">
        <div class="flex flex-col">
          <i class="fa-solid fa-earth-asia text-moss"></i> <h2 class="text-center"><%= tip.name %></h2>
        <%# <div><h5>Description:<%= tip.description %>
          <%= link_to 'read more', tip_path(tip) %>

      </div>

    </div>
   <% end %>
  </div>


<% if policy(Tip).create? %>
  <p>only for admin user</p>
  <%= link_to 'create new tips & tricks', new_tip_path %>
<% end %>
</main>
