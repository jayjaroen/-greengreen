<main class="bg-white max-w-screen-xl mx-auto h-full">

  <h1 class="text-2xl text-moss font-bold text-center pt-2">Edit Profile</h1>
    <div class="flex justify-center">
      <div class="bg-artichoke p-8 rounded mt-2 mb-10 mx-6">

        <%= simple_form_for (@user) do |f| %>
        <div><span class="text-white">E-mail</span>
          <%= f.input :email, class:"text-white", label:false, input_html: {
              class: "block w-full rounded-md bg-gray-50
              focus:border-moss focus:bg-white
              focus:ring-0 mt-1.5 mb-6 h-10"  } %></div>

              <%= f.input :photo, as: :file %>

        <%= f.submit "Update" , class:"bg-white w-full mt-3 text-moss text-bold py-2 mb-4 rounded hover:bg-lightmoss transition-colors" %>
        <%= link_to "Back", profile_path(@user), class:"text-white mb-2 hover:text-moss transition-colors" %>
        <% end %>
     </div>
  </div>

</main>
