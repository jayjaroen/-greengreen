<main class="bg-lightsand h-screen">
<%# Profile card - picture name %>
  <div class="md:grid md:grid-cols-3 md:mx-12 md:pt-4">
    <div class="md:col-span-1">
      <div class="flex justify-center pt-6 ml-8">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, :width=>200, :height=>200, gravity: :face, :gravity=>"face", class: "profile-img p-0 rounded-full" %>
        <% else %>
          <%= image_tag "noprofilepic.jpg", width: 200, height: 200, class:"rounded-full p-o" %>
        <% end %>
      </div>

      <!--- Carbon emission saved-->
      <div class="flex justify-center">
        <h1 class="text-moss text-4xl ml-4 font-oswald pt-4 tracking-wider"> <%= current_user.first_name.capitalize  %> <%= current_user.last_name.capitalize %></h1>
        <%= link_to edit_user_path(@user) do %>
        <i class="fas fa-user-edit text-moss hover:text-lightmoss text-2xl ml-4 pt-6"></i>
      </div>
        <% end %>

    <div class="bg-artichoke p-6 mx-4 rounded mt-4">
      <div class="text-moss font-barlow text-2xl flex flex-start">
      <p class="font-bold  font-oswald px-4 text-6xl underline underline-offset-2 pt-4"><%= @user.total_carbon_score  %> </p>
        <div class="flex flex-col">
          <p>gs C02E</p>
          <p>saved since  <%= @user.created_at.strftime("%Y-%m-%d") %></p>
        </div>
      </div>
    </div>
  </div>

<div class="md:col-span-2">
  <div class="bg-artichoke p-6 mx-4 rounded mt-4 font-barlow text-xl md:h-full">
    <%#  Challenges heading %>
    <div class="flex flex-row">
      <h3 class="font-oswald text-3xl text-moss mb-4 md:text-4xl md:ml-8">Your challenges</h3>
      <i class="fab fa-pagelines text-moss text-3xl ml-2 mt-1"></i>
    </div>

  <%# User challenges %>
    <div class="font-barlow text-moss md:ml-8">
      <% @user_challenges.each do |user_challenge| %>
        <ol>
          <div class="flex flex-row">
            <%= link_to user_challenge.challenge.action, user_challenge_path(user_challenge) %>
              <% if current_user.user_challenge_records.where(user_challenge: user_challenge, date: Time.current.in_time_zone('Beijing').to_date).present? %>
                <div><i class="fab fa-envira text-lightmoss ml-2"></i> </div>
             </div>

            <% else %>

          <%= form_with model: UserChallengeRecord.new, url: user_challenge_user_challenge_records_path(user_challenge) do |f| %>
            <%= f.hidden_field :user_challenge_id, value: user_challenge.id %>
            <%= f.hidden_field :date, value: Time.current.in_time_zone('Beijing').to_date %>
            <%# <%= f.submit 'Complete this Challenge for today' %>
             <%= f.button :submit do %>
                  <i class="fas fa-check text-moss text-2xl ml-2"></i>
              <% end %>
          <% end %>
        <% end %>
      </ol>
    <% end %>
     </div>
    </div>
  </div>
  </div>
  </div>
</main>
