        <div class="font-oswald text-3xl text-moss ">of C02e</div> %>
        <%# <div class="font-oswald text-3xl text-moss " >in 2020</div> %>
        <div class="grid grid-cols-2 m-2 gap-2">
          <div class="bg-artichoke  p-4 rounded text-moss font-barlow text-xl tracking-wider text-center">
            <div class="font-oswald text-3xl text-moss text-center" >2017</div>
            <div class="h-3"></div>
            <div class="font-oswald text-3xl text-moss"><%= @location.per_cap_17 %></div>
            <%# <div class="font-oswald text-3xl text-moss " >MT</div> %>
            <%# <div class="font-oswald text-3xl text-moss ">of C02e</div>
            <div class="font-oswald text-3xl text-moss " >in 2017</div> %>
          </div>

          <div class="bg-artichoke  p-4 rounded text-moss font-barlow text-xl tracking-wider text-center">
            <div class="font-oswald text-3xl text-moss text-center" >2020</div>
            <div class="h-3"></div>
            <div class="font-oswald text-3xl text-moss"><%= @location.per_cap_20 %></div>
          </div>
        </div>



  </div>

