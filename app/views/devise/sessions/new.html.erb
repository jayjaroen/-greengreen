<main class="bg-white h-screen flex flex-col">
  <h2 class="text-center text-moss text-4xl mt-10 mb-4">Welcome back!</h2>
  <div class="bg-artichoke rounded p-8 m-8 md:mx-20 lg:mx-20" >


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, class:"text-gray-700 mb-2" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",  class:"bg-moss w-full text-white py-2 mb-4 mt-3 rounded hover:bg-darkmoss transition-colors" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
