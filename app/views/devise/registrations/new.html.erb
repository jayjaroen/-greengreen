<main class="bg-white h-screen flex flex-col">
  <h2 class="text-center text-moss text-4xl mt-5 mx-2 mb-4">Welcome to Go!Green</h2>
    <div class="text-center text-moss text-2xl">Please sign up</div>
      <div class="bg-artichoke rounded p-8 mx-8 mt-4 md:mx-20 lg:mx-20 md:px-20 lg:px-30" >

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

         <div class="field">
          <%= f.label :first_name, class:"text-gray-700 mb-2" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
        </div>

         <div class="field">
          <%= f.label :last_name, class:"text-gray-700 mb-2" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
        </div>

        <div class="field">
          <%= f.label :email, class:"text-gray-700 mb-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
        </div>



        <div class="field">
          <%= f.label :password, class:"text-gray-700 mb-2" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:"text-gray-700 mb-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up",class:"bg-moss w-full text-white py-2 mb-4 mt-3 rounded hover:bg-darkmoss transition-colors" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
  </main>
