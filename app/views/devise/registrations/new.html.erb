<main id="home-screen" class="bg-lightsand h-screen">
  <h2 class="text-center text-moss text-4xl pt-20 mx-2 mb-2 font-oswald tracking-wider">Green is now</h2>
    <div class="text-center text-moss text-2xl font-barlow tracking-wider">Please sign up</div>

      <div class="bg-artichoke rounded p-10 mx-8 mt-4 pb-6 md:mx-20 lg:mx-20 md:px-20 lg:px-30" >
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :first_name, class:"text-darkmoss text-xl tracking-wide mb-2 font-barlow" %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",  class:"w-full p-2 bg-gray-50 text-gray-500 pl-2  mt-2 outline-none mb-4 rounded" %>
          </div>

          <div class="field">
            <%= f.label :last_name, class:"text-darkmoss text-xl tracking-wide mb-2 font-barlow" %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"w-full p-2 bg-gray-50 text-gray-500 pl-2  mt-2 outline-none mb-4 rounded" %>
          </div>

          <div class="field">
            <%= f.label :email, class:"text-darkmoss text-xl tracking-wide mb-2 font-barlow" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"w-full p-2 bg-gray-50 text-gray-500 pl-2  mt-2 outline-none mb-4 rounded" %>
          </div>

          <div class="field">
            <%= f.label :password, class:"text-darkmoss text-xl tracking-wide mb-2 font-barlow" %>
            <% if @minimum_password_length %>
            <em class="text-moss text-xl">(<%= @minimum_password_length %> characters minimum) </em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class:"text-darkmoss text-xl tracking-wide mb-2 font-barlow" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"w-full py-2 bg-gray-50 text-gray-500 px-1  mt-2 outline-none mb-4 rounded" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up",class:"bg-moss w-full text-2xl text-white py-2 mb-4 mt-2 rounded hover:bg-darkmoss transition-colors font-barlow" %>
            </div>
          <% end %>
         <div class="text-center"><%= render "devise/shared/links" %></div>
       </div>

    <div class="bg-lightsand" style="height: 50px"></div>
  </main>
